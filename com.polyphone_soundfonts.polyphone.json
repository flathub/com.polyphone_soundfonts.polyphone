{
    "app-id": "com.polyphone_soundfonts.polyphone",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "polyphone",
    "rename-icon": "polyphone",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc",
        "--socket=fallback-x11",
        /* Wayland */
        "--socket=wayland",
        /* Note playback */
        "--socket=pulseaudio",
        /* MIDI */
        "--device=all",
        /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
        "--filesystem=home",
        /* For pipewire-jack */
        "--filesystem=xdg-run/pipewire-0",
        "--system-talk-name=org.freedesktop.RealtimeKit1",
        /* Polyphone connectivity */
        "--share=network",
        /* Allow other instances to see lockfiles */
        "--env=TMPDIR=/var/tmp",
        /* On SuSE it seems to be necessary for sound to work */
        "--env=ALSA_CONFIG_PATH=",
        "--env=QT_ENABLE_HIGHDPI_SCALING=1"
    ],
    "cleanup": [
        "/bin/jack*"
    ],
    "modules": [
        "shared-modules/linux-audio/jack2.json",
        {
            "name": "portaudio",
            "config-opts": [
                "--disable-static",
                "--without-oss"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.portaudio.com/archives/pa_stable_v190600_20161030.tgz",
                    "sha256": "f5a21d7dcd6ee84397446fa1fa1a0675bb2e8a4a6dceb4305a8404698d8d1513"
                }
            ]
        },
        {
            "name": "rtmidi",
            "config-opts": [
                "--disable-static",
                "--enable-shared"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/share",
                "*.la"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.music.mcgill.ca/~gary/rtmidi/release/rtmidi-4.0.0.tar.gz",
                    "sha256": "370cfe710f43fbeba8d2b8c8bc310f314338c519c2cf2865e2d2737b251526cd"
                }
            ]
        },
        "shared-modules/linux-audio/stk.json",
        {
            "name": "qcustomplot",
            "buildsystem": "qmake",
            "cleanup": [
                "/include"
            ],
            "config-opts": [
                "LIBDIR=/app/lib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.qcustomplot.com/release/2.0.1/QCustomPlot-source.tar.gz",
                    "sha256": "574cee47def3251d080168a23428859214277cb9b6876bcdb9ce9d00b2403fe4"
                },
                {
                    "type": "file",
                    "path": "patches/qcustomplot.pro"
                }
            ]
        },
        {
            "name": "polyphone",
            "buildsystem": "qmake",
            "post-install": [
                "make install",
                "install bin/polyphone /app/bin",
                "install contrib/polyphone.svg -D -t /app/share/icons/hicolor/scalable/apps",
                "install resources/polyphone.png -D -t /app/share/icons/hicolor/512x512/apps",
                "install contrib/com.polyphone_soundfonts.polyphone.desktop -D -t /app/share/applications",
                "install contrib/polyphone.xml -D /app/share/mime/packages/${FLATPAK_ID}.xml",
                "install README changelog -D -t /share/doc/polyphone",
                "install com.polyphone_soundfonts.polyphone.metainfo.xml -D -t /app/share/metainfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.polyphone-soundfonts.com/download/file/893-polyphone-2-3-zip/latest/download?6928b4dda335a6697327b794ae30231f=1&return=aHR0cHMlM0ElMkYlMkZ3d3cucG9seXBob25lLXNvdW5kZm9udHMuY29tJTJGZG93bmxvYWQ=",
                    "sha256": "44adef69bb1ff37f5afc9de1f2fa33da46c310038847b80fc0841fd28ff203da",
                    "strip-components": 0,
                    "dest-filename": "polyphone-2-3.zip"
                },
                {
                    "type": "file",
                    "path": "com.polyphone_soundfonts.polyphone.metainfo.xml"
                }
            ]
        }
    ]
}
